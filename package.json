{
  "name": "media-library-backend",
  "version": "1.0.0",
  "description": "NestJS + MongoDB Media Library API with JWT Authentication",
  "author": "Yavuz Yilmaz",
  "license": "MIT",
  "main": "dist/server.js",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:dev": "nodemon --exec ts-node server.ts",
    "start:debug": "nodemon --exec ts-node --inspect server.ts",
    "dev": "pnpm run start:dev",
    "lint": "eslint \"**/*.ts\" --fix",
    "lint:check": "eslint \"**/*.ts\"",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.4.20",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/swagger": "^7.1.13",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "mongoose": "^7.5.3",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@types/bcryptjs": "^2.4.4",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.6.3",
    "@types/passport-jwt": "^3.0.9",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.7.0",
  "keywords": [
    "nestjs",
    "mongodb",
    "jwt",
    "authentication",
    "media-library",
    "api",
    "typescript"
  ]
}
